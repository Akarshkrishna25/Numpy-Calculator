import numpy as np
import time


def Calculator(func):
    def wrapper(*args, **kwargs):
        start = time.time()
        try:
            return func(*args, **kwargs)
        finally:
            end = time.time()
            print(f"Time taken: {end - start:.4f} seconds\n")
    return wrapper


@Calculator
def array_input(msg):
    while True:
