@Calculator
def manip(a):
        dimension=int(input("Enter dimension >2 and <3 for reshape"))
        if dimension==1:
            print()
            print(f"Reshape : {a.reshape(-1)}")
        elif dimension==2:
            rw=int(input("Enter the row "))
            cw=int(input("Enter the col "))
            print(f"Reshape : {a.reshape((rw,cw))}")


        elif dimension==3:
            rw=int(input("Enter the row "))
            cw=int(input("Enter the col "))
            ele=int(input("Enter the ele "))
            print(f"Reshape : {a.reshape((rw,cw,ele))}")


        reverse=np.flip(a)
        print(f"Reverse : {reverse}")

        result = np.sort(a)
        print(f"sort: {result}")
        print(f"Unique: {np.unique(a)}")
        print(f"First and Last: {a[(0,) * a.ndim], a[(-1,) * a.ndim]}")
        print(f"Value>mean {a[a>=a.mean()]}")






